<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoConstante"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:contentDescription="Icono Aplicación Mira Roja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aim_icon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:text="Usuario,\nel medicamento:\nDexamestasona"
        android:textAlignment="center"
        android:textColor="@color/letrasFondo"
        android:textSize="50sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="298dp"
        android:layout_height="69dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="¿Cada cúantas horas fue recetado?"
        android:textAlignment="center"
        android:textColor="@color/letrasFondo"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnVolver"
        android:layout_width="302dp"
        android:layout_height="57dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_volver"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_volver"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Horas4"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_general"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_general"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Horas6"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_general"
        android:text="6"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_general"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Horas8"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_general"
        android:text="8"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_general"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Horas4" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Horas12"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_general"
        android:text="12"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_general"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Horas6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Horas24"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_general"
        android:text="24"
        android:textAllCaps="false"
        android:textColor="@drawable/letras_general"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Horas8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/OtrasHoras"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_general"
        android:text="Otro"
        android:textAllCaps="false"

        android:textColor="@drawable/letras_general"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Horas12" />

</androidx.constraintlayout.widget.ConstraintLayout>