<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >

            <shape>
                <solid android:color="@color/letrasFondo"/>
                <corners android:topLeftRadius="3dp"/>
            </shape>
        </rotate>
    </item>
    <item android:state_enabled="true">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >
            <shape>
                <solid android:color="@color/fondoInteractuable"/>
                <corners android:topLeftRadius="3dp"/>
            </shape>
        </rotate>
    </item>

    <item android:state_enabled="false">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >
            <shape>
                <solid android:color="@color/DisGray"/>
                <corners android:topLeftRadius="3dp"/>
            </shape>
        </rotate>
    </item>
</selector>